{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Waste vs Recycle in Australia (2020-2021)",
  "projection": {"type": "mercator", "center": [133, -28], "scale": 600},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/slee0206/FIT2086_visualisation_2/refs/heads/main/au-states-topo.json",
        "format": {"type": "topojson", "feature": "austates"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/slee0206/FIT2086_visualisation_2/refs/heads/main/clean_waste_recycle.csv"
      },
      "transform": [
        {"filter": "datum.Year == '2020-2021'"},
        {"filter": "datum.Management != 'Recycling'"},
        {
          "aggregate": [{"op": "sum", "field": "Tonnes", "as": "total_waste"}],
          "groupby": ["Jurisdiction"]
        },
        {
          "lookup": "Jurisdiction",
          "from": {
            "data": {
              "values": [
                {"state": "NSW", "longitude": 146, "latitude": -32},
                {"state": "Vic", "longitude": 144, "latitude": -37},
                {"state": "Qld", "longitude": 144, "latitude": -22},
                {"state": "WA", "longitude": 122, "latitude": -25},
                {"state": "SA", "longitude": 135, "latitude": -30},
                {"state": "Tas", "longitude": 146, "latitude": -42},
                {"state": "NT", "longitude": 133, "latitude": -20},
                {"state": "ACT", "longitude": 149, "latitude": -35.3}
              ]
            },
            "key": "state",
            "fields": ["longitude", "latitude"]
          }
        }
      ],
      "mark": {"type": "circle", "opacity": 0.8},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "total_waste",
          "type": "quantitative",
          "title": "Total Waste (Tonnes)",
          "scale": {"range": [100, 5000]}
        },
        "color": {
          "field": "total_waste",
          "type": "quantitative",
          "title": "Total Waste (Tonnes)",
          "scale": {"scheme": "reds"}
        },
        "tooltip": [
          {"field": "Jurisdiction", "type": "nominal", "title": "State"},
          {
            "field": "total_waste",
            "type": "quantitative",
            "title": "Total Waste (Tonnes)",
            "format": ",.0f"
          }
        ]
      }
    }
  ],
  "config": {"legend": {"orient": "bottom-left", "offset": 0}}
}